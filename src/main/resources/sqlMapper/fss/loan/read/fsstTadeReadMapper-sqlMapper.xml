	<!-- 借款人提现列表 -->
	<select id="getBorrowWithDraw"  parameterType="java.util.Map" resultType="com.gqhmt.fss.architect.trade.entity.FssTradeApplyEntity" >
		SELECT 
			t.id id,
		    t.contract_id contractId,
		    t.acc_no accNo,
			t.trade_amount tradeAmount,
			t.seq_no seqNo,
			t.bespoke_date bespokeDate,
			t.create_time createTime,
			t.modify_time modifyTime,
			t.mchn_child mchnChild,
			t.is_true isTrue,
			t.trade_state tradetate,
			t.real_trade_amount realTradeAmount,
			t.loan_platform loanPlatform  	
			FROM t_gq_fss_loan t 
			where t.apply_type=11091001
			<if test="contractId != null and contractId != ''">
				and t.contract_id like concat('%',#{contractId},'%')
			</if>
			<if test="seqNo != null and seqNo != ''">
				and t.seq_no like concat('%',#{seqNo},'%')
			</if>
			<if test="mchnChild != null and mchnChild != ''">
				and t.mchn_child like concat('%',#{mchnChild},'%')
			</if>
			<choose>
				<when test="creatTime == null or creatTime == '' and modifyTime==null ">
					AND 1=1
				</when>
				<when test="creatTime != null and creatTime != '' and modifyTime==null or modifyTime=='' ">
					AND t.create_time BETWEEN #{creatTime} AND SYSDATE()
				</when>
				<when test="creatTime != null and creatTime != '' and modifyTime!=null and modifyTime!=''">
					AND t.create_time BETWEEN #{creatTime} AND #{modifyTime}
				</when>
				<when test="creatTime == null or creatTime == '' and modifyTime!=null and modifyTime!=''">
					AND t.create_time &lt; #{modifyTime} 
				</when>
			</choose>
	</select>
	<!-- 通过loanId得到收费列表 -->
	<select id="findFeeList"  parameterType="java.lang.Long" resultType="com.gqhmt.fss.architect.loan.entity.FssFeeList" >
		SELECT 
			f.id,
			f.fee_type feeType,
			f.rep_code repCode,
			f.rep_msg repMsg,
			f.trade_status tradeStatus,
			f.is_true isTrue,
			f.loan_platform loanPlatform,
			f.fee_amt feeAmt
			FROM t_gq_fss_feeList f
			where f.loan_id=#{id}
	</select>
